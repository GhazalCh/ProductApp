@page
@model CreateModel
<h2>
    Create Product
</h2>
<form method="post">
    <div>
        <label>Name</label>
        <input asp-for="Product.Name" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Product.Price" type="number" step="0.01" />
    </div>
    <button type="submit">Save</button>
    <a asp-page="Index">Back</a>
</form>